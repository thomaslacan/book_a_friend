<div class="container">
  <div class="form-layout-container">
    <div class="form-container">
      <div class="form-content">
      <%= simple_form_for @moment do |f| %>
      <%= f.input :activity %>
      <%= f.select :category, collection: ['Cinema', 'Concert', 'Drink', 'Exposure', 'Food', 'Games', 'Shopping', 'Sport', 'Travel', 'Visit'] %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.select :level, collection: ['Beginner', 'Easy', 'Average', 'Hard', 'Hell'] %>
      <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "Update Moment", class: "btn btn-primary" %>
      <%= link_to 'Back to Moments List', moments_path, class: 'btn btn-info' %>
      <% end %>
      </div>
    </div>
  </div>
</div>

