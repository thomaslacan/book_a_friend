<div class="container">
  <div class="form-layout-container">
    <div class="form-container">
      <div class="form-content">

    <%= simple_form_for @user do |f| %>
      <%= f.input :username %>
      <%= f.input :description %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Update my bio", class: "btn btn-primary" %>
    <% end %>

      </div>
    </div>
  </div>
</div>
