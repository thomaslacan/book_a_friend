<div class="col-xs-12 col-sd-6 col-md-4">
  <div id="booking-activity">
    <%= booking.moment.activity %>
  </div>
  <div id="booking-description">
    <%= booking.moment.description %>
  </div>
  <div id="booking-location">
    <i class="fas fa-map-marker"></i> <%= booking.moment.location %>
  </div>
  <div id="delete">
    <% if booking.user == current_user %>
      <%= link_to 'Delete Booking', moment_booking_path(booking.moment, booking), method: :delete %>
    <% end %>
  </div>
</div>
